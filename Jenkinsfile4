pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'dotnet restore'
                sh 'dotnet build'
            }
        }

        stage('Deploy to EC2') {
            steps {
                // Use SSH to deploy your app to EC2
                sshagent(credentials: ['your-ssh-credentials-id']) {
                    sh 'ssh -i /Users/manasvidhankani/Downloads/awstest.pem ec2-user@3.94.250.151 "cd ec2-user@3.94.250.151 && git pull"'
                }
            }
        }
    }
}
