pipeline {
    agent any

    stages {
        stage('Preparation') {
            steps {
                deleteDir() // Clear the workspace before each build
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'dotnet restore'
                sh 'dotnet build --configuration Release'
            }
        }
        
        stage('Publish') {
            steps {
                sh 'dotnet publish --configuration Release --output ./publish'
            }
        }
        
        stage('Deploy to EC2') {
            steps {
                sh "scp -i /Users/manasvidhankani/Downloads/awstest.pem -r ./publish ec2-user@54.198.71.202:/Users/manasvidhankani/Downloads
            }
        }
        
        stage('Run App on EC2') {
            steps {
                script {
                    def appPath = '/Users/manasvidhankani/Downloads/publish'
                    sh "ssh -i /Users/manasvidhankani/Downloads/awstest.pem ec2-user@54.198.71.202 'cd ${appPath} && nohup dotnet WebApplication1.dll &'"
                }
            }
        }
    }
}
